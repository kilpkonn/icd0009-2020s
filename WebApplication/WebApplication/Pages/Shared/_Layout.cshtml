<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Car App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">WebApplication</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Marks
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                            <a class="nav-link text-dark" asp-area="" asp-controller="CarMark" asp-action="Index">Marks</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="CarModel" asp-action="Index">Models</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="CarType" asp-action="Index">Types</a>

                            @if (User.Identity?.IsAuthenticated ?? false)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Index">Cars</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CarAccess" asp-action="Index">CarAccesses</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CarErrorCode" asp-action="Index">ErrorCodes</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="GasRefill" asp-action="Index">GasRefills</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Track" asp-action="Index">Tracks</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="TrackLocation" asp-action="Index">TrackLocations</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="CarAccessType" asp-action="Index">AccessTypes</a>
                            }
                        </div>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Users
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Users" asp-action="Index">Users</a>
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Roles" asp-action="Index">Roles</a>
                            </div>
                        </li>
                    }

                <partial name="_LanguageSelection"/>
                </ul>

                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - WebApplication - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>