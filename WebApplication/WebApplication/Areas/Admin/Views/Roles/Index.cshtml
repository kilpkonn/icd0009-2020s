@using Resource.Base.Areas.Admin.Pages
@model IEnumerable<Domain.App.Identity.AppRole>

@{
    ViewData["Title"] = Roles.Index;
}

<h1>@Roles.Index</h1>

<p>
    <a asp-action="Create">@Roles.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConcurrencyStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalizedName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcurrencyStamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Roles.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Roles.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Roles.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
