@model WebApplication.Models.CarType.CreateEditViewModel;

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="CarType!.Id" value="@(Model?.CarType?.Id ?? Guid.NewGuid())"/>
<div class="form-group">
    <label asp-for="CarType!.Name" class="control-label"></label>
    <input asp-for="CarType!.Name" class="form-control" />
    <span asp-validation-for="CarType!.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CarType!.CarModelId" class="control-label"></label>
    <select asp-for="CarType!.CarModelId" class="form-control" asp-items="Model!.CarModels"></select>
    <span asp-validation-for="CarType!.CarModelId" class="text-danger"></span>
</div>