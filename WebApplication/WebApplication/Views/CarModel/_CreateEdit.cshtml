@model WebApplication.Models.CarModel.CreateEditViewModel;

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="CarModel!.Id" value="@(Model?.CarModel?.Id ?? Guid.NewGuid())"/>
<div class="form-group">
    <label asp-for="CarModel!.Name" class="control-label"></label>
    <input asp-for="CarModel!.Name" class="form-control" />
    <span asp-validation-for="CarModel!.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CarModel!.ReleaseDate" class="control-label"></label>
    <input asp-for="CarModel!.ReleaseDate" class="form-control" />
    <span asp-validation-for="CarModel!.ReleaseDate" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CarModel!.CarMarkId" class="control-label"></label>
    <select asp-for="CarModel!.CarMarkId" class="form-control" asp-items="Model!.CarMarks"></select>
    <span asp-validation-for="CarModel!.CarMarkId" class="text-danger"></span>
</div>