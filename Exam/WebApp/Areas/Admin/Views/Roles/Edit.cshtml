@using Resource.Base.Areas.Admin.Pages
@model Domain.Identity.AppRole

@{
    ViewData["Title"] = Roles.Edit;
}

<h1>@Roles.Edit</h1>

<h4>@Roles.AppRole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_CreateEdit" model="Model"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Roles.Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
